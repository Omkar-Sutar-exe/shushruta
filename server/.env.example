# ===========================================
# SHUSHRUTA PROJECT - ENVIRONMENT CONFIGURATION TEMPLATE
# ===========================================
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE=mongodb://127.0.0.1:27017/Shushruta

# Server Configuration
PORT=8000
NODE_ENV=development

# JWT Secret Key (CHANGE THIS IN PRODUCTION!)
JWT_SECRET=your_jwt_secret_key_here

# ===========================================
# EMAIL/SMTP CONFIGURATION
# ===========================================

# SMTP Server Settings (Gmail Example)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Email Configuration
MAIL_FROM=Shushruta
ADMIN_EMAIL=admin@shushruta.com
MAIL_TO=admin@shushruta.com

# ===========================================
# FRONTEND CONFIGURATION
# ===========================================

# React App API URL
REACT_APP_API_URL=http://localhost:8000
FRONTEND_URL=http://localhost:3000

# ===========================================
# PAYMENT CONFIGURATION (Braintree)
# ===========================================

# Braintree Payment Gateway (Currently Disabled)
# BRAINTREE_MERCHANT_ID=your-merchant-id
# BRAINTREE_PUBLIC_KEY=your-public-key
# BRAINTREE_PRIVATE_KEY=your-private-key

# ===========================================
# TWILIO SMS CONFIGURATION
# ===========================================

# Twilio Account Credentials (Get from https://console.twilio.com/)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_FROM=+1234567890
